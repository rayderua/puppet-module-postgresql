<% @default_hba.each do | v | -%>
<% if v.is_a?(Hash) -%>
<% if !v['type'].nil? -%><%= "%-12s" % v['type'] %><% end -%> <% if !v['database'].nil? -%><%= "%-32s" % v['database'] %><% end -%> <% if !v['user'].nil? -%><%= "%-32s" % v['user'] %><% end -%> <% if !v['address'].nil? -%><%= "%-20s" % v['address'] %><% end -%> <% if !v['auth_method'].nil? -%><%= "%-12s" % v['auth_method'] %><% end -%> <% if !v['auth_options'].nil? -%><%= v['auth_options'] %><% end %>
<% end -%>
<% end -%>

<% if @pg_hba.is_a?(Array) -%>
<% @pg_hba.each do | v | -%>
<% if v.is_a?(Hash) -%>
<% if !v['type'].nil? -%><%= "%-12s" % v['type'] %><% end -%> <% if !v['database'].nil? -%><%= "%-32s" % v['database'] %><% end -%> <% if !v['user'].nil? -%><%= "%-32s" % v['user'] %><% end -%> <% if !v['address'].nil? -%><%= "%-20s" % v['address'] %><% end -%> <% if !v['auth_method'].nil? -%><%= "%-12s" % v['auth_method'] %><% end -%> <% if !v['auth_options'].nil? -%><%= v['auth_options'] %><% end %>
<% end -%>
<% if v.is_a?(String) -%>
<%= v %>
<% end -%>
<% end -%>
<% end -%>
